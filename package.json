{
  "name": "gocd-dashboard",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "node_modules/.bin/eslint app.js",
    "start": "node_modules/.bin/babel-node ./bin/www",
    "auto-start": "nodemon --exec \"npm run lint && npm start\" --ignore public/js"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "jade": "~1.11.0",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0"
  },
  "eslintConfig" : {
    "parser": "babel-eslint",

    "env": {
      "node": true,
      "es6": true
    },

    "rules":{
      "vars-on-top": 2,
      "no-undef": 2
    }
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-eslint": "^4.1.8",
    "eslint": "^1.10.3"
  }
}
